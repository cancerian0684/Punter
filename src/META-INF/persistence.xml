	<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="javax.persistence.jdbc.url"  value="jdbc:derby://localhost:1527/punterDB;create=true" />
			<property name="javax.persistence.jdbc.user" value="punter" />
			<property name="javax.persistence.jdbc.password" value="punter" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
			<property name="eclipselink.logging.level" value="FINE" />
		</properties>


  </persistence-unit>
</persistence>
